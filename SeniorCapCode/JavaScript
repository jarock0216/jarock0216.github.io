// Example: dynamically update alerts (dummy data)
const alerts = [
    "Weapon detected at 10:32 AM",
    "Mask detected at 11:15 AM",
    "Suspicious movement at 12:04 PM"
];

const alertList = document.getElementById("alert-list");
alertList.innerHTML = "";
alerts.forEach(alert => {
    const li = document.createElement("li");
    li.textContent = alert;
    alertList.appendChild(li);
});

// Example: updating alert count
document.getElementById("alerts-count").textContent = alerts.length;
